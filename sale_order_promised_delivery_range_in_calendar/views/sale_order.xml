<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_calendar" model="ir.ui.view">
        <field name="name">sale.order.promised.delivery.range.in.calendar.sale.order.calendar</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sale_order_calendar"/>
        <field name="arch" type="xml">
            <calendar position="attributes">
                <attribute name="date_start">date_delivery_promised_start</attribute>
                <attribute name="date_stop">date_delivery_promised_end</attribute>
            </calendar>
        </field>
    </record>
</odoo>
