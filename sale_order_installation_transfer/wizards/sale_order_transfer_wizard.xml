<openerp>
    <data>

        <record id="sale_order_transfer_wizard_view_form" model="ir.ui.view">
            <field name="name">sale.order.transfer.wizard.form</field>
            <field name="model">sale.order.transfer.wizard</field>
            <field name="arch" type="xml">
                <form string="Transfer Sale Orders">
                    <field name="state" invisible="1"/>
                    <div states="step_information">
                        <p>
                            The selected sale orders will be transferred to the following Odoo installation:
                        </p>
                        <group string="Target installation">
                            <field name="target_url" readonly="1"/>
                            <field name="target_username" readonly="1"/>
                        </group>
                        <group string="Customer">
                            <field name="target_customer_vat"/>
                        </group>
                    </div>

                    <div states="step_results">
                        <p>
                            Sale order information transferred.
                        </p>
                    </div>

                    <footer>
                        <div states="step_information">
                            <button string="Transfer Sale Orders" name="transfer_sale_orders" type="object" class="oe_highlight"/>
                            or
                            <button string="Cancel" class="oe_link" special="cancel"/>
                        </div>
                        <div states="step_results">
                            <button string="Close" class="oe_highlight" special="cancel"/>
                        </div>

                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>