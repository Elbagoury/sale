        <field name="model">sale.config.settings</field>
        <field name="inherit_id" ref="sale.view_sales_config"/>
        <field name="arch" type="xml">
            <group name="quotations_sales" position="inside">
                <field name="mandatory_partner_field_ids">
                    <tree>
                        <field name="name"/>
