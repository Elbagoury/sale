<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_sales_order_filter" model="ir.ui.view">
            <field name="name">sale.order.add.filters</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='my_sale_orders_filter']" position="after">
                    <separator/>
                    <filter string="Promised Delivery due within next 7 Days" domain="[('date_delivery_promised_start','&lt;=',((context_today()+relativedelta(weeks=0, days=7)).strftime('%Y-%m-%d'))),('date_delivery_promised_start','&gt;=',((context_today().strftime('%Y-%m-%d')))]"/>
                    <separator/>
                    <filter string="Promised Delivery is Late" domain="[('date_delivery_promised_start','&lt;',((context_today().strftime('%Y-%m-%d')))]"/>
                    <separator/>
                    <filter string="Order is Confirmed but not Received" domain="[('state','=','finalization')]"/>
                    <separator/>
                </xpath>
            </field>
        </record>

</odoo>